<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nisira.view.Activity.edit_OrdenServicio_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/amarillo"
            android:id="@+id/header_rl_edit_ordenserv"
            android:orientation="horizontal">

                    <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorHighlight="@color/white"
                    android:shadowColor="@color/white"
                    android:inputType="text"
                    android:layout_toStartOf="@+id/fab_cancelar"
                    android:textSize="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp"
                    android:backgroundTint="@color/white"
                    android:enabled="false"
                    android:hint="Prueba"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_cancelar"
                android:layout_width="@dimen/fab_size_normal"
                android:layout_height="@dimen/fab_size_normal"
                android:layout_gravity="end|center_horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimary"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                app:fab_colorNormal="@color/rojo"
                android:src="@drawable/ic_close_white"
                app:backgroundTint="@color/verde"
                app:fab_colorPressed="@color/colorAccent" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_aceptar"
                android:layout_width="@dimen/fab_size_normal"
                android:layout_height="@dimen/fab_size_normal"
                android:layout_gravity="end|center_horizontal"
                android:background="@color/colorPrimary"
                app:fab_colorNormal="@color/verde"
                android:src="@drawable/ic_check_white"
                app:backgroundTint="@color/verde"
                app:fab_colorPressed="@color/colorAccent"
                android:layout_alignTop="@+id/fab_cancelar"
                android:layout_toStartOf="@+id/fab_cancelar" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/area_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:src="@drawable/ic_menu_manage" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp">

                    <EditText
                        android:id="@+id/campo_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="probando"
                        android:inputType="text"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/area_nombre"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_correo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:src="@drawable/ic_menu_manage" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp">

                    <EditText
                        android:id="@+id/campo_telefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="probando"
                        android:inputType="phone" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/area_telefono"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_telefono2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_correo"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:layout_row="2"
                    android:src="@drawable/ic_menu_manage" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_correo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp">

                    <EditText
                        android:id="@+id/campo_correo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="probando"
                        android:inputType="textEmailAddress"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#ffd5d5d5"
                android:id="@+id/linea">
            </View>
            <LinearLayout
                android:id="@+id/area_correo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/area_telefono"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_telefono3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_correo"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:layout_row="2"
                    android:src="@drawable/ic_menu_documento" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_correo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp">

                    <EditText
                        android:id="@+id/campo_correo3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="probando"
                        android:inputType="textEmailAddress"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/area_correo4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/area_telefono"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_telefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_correo"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:layout_row="2"
                    android:src="@drawable/ic_menu_people" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_correo4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp">

                    <EditText
                        android:id="@+id/campo_correo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="probando"
                        android:inputType="textEmailAddress"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
